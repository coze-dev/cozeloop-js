{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loop-infra/ts-config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "ES2022",
    "lib": ["es2015", "dom"],
    "types": ["node"],
    "target": "es2022",
    "experimentalDecorators": true,
    "tsBuildInfoFile": "./temp/.tsbuildinfo"
  },
  "include": ["src"]
}
